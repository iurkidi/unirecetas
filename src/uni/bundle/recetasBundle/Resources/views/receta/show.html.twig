{% extends 'uniRecetasBundle::layout.html.twig' %}

{% block central -%}
         
    <div class="detalleNot">
        <div class="LineaFormulario"></div>

        <h1 class="centrado">{{entity.titulo}}</h1>

        <div class="LineaFormulario"></div>

        <div class="LineaFormulario centrado">
            <img src="{{ asset('bundles/unirecetas/img/'~ entity.foto  ~ '') }}" width="25%" heigth="25%"/>
        </div>
      
            <h3 class="izquierda separarIzq20">{{entity.aut.nombre}} {{ entity.fechaPub|date('Y/m/d') }}</h3>
              
        <div id="notaingred" class="centrado">
            <br>
                <p class="izquierda separarIzq20 letranegra negrita">Ingredientes para {{ entity.numpers }} personas</p>
                <br><br>
            <ol class="letranegra">
                {% for ingred in entity.recingr %}
                    <li class="textoizq sinnegrita">
                    {{ ingred.cantidad }} {{ ingred.unidad }} {{ ingred.iingrediente.nombre }}<br>
                    </li>                    
                {% endfor %}                              
            </ol>        
        
        <br><br><br><br><p class="letranegra"><b><u>({{ entity.categ.titulo }})</b></u> {{entity.elaboracion|raw|nl2br}}</p>
            </div>
        <div class="LineaFormulario"></div>
        <div class="LineaFormulario"></div>

            <div class="LineaFormulario">
                <a href="{{path('receta' )}}"> Volver atras</a>  
                <a href="{{ path('receta_edit', { 'id': entity.id }) }}">
                   Editar
               </a>
             {#  {{ form(delete_form) }}#}
            </div>
    </div>
{% endblock %}
